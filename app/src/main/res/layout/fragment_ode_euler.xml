<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/parentContainer"
    android:layout_width="match_parent"

    android:layout_height="match_parent"
    android:background="@color/colorMainBackground"
    android:orientation="vertical">

    <com.foreverrafs.numericals.custom_views.HeaderTextView
        android:id="@+id/text_header"
        style="@style/AppMaterialTheme.HeaderStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/euler_forward_method" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="20dp"
                android:text="Solve numerically an Initial Value Problem using Euler's Method"
                android:textAlignment="center"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="17sp" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/til_user_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/std_layout_margin"
                android:layout_marginRight="@dimen/std_layout_margin"
                app:hintTextAppearance="@style/AppMaterialTheme.TextInputHintStyle">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/text_equation"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:hint="Initial Value Problem (IVP)"
                    android:imeOptions="actionGo"
                    android:inputType="text"
                    android:textAlignment="center" />
            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/std_layout_margin"
                android:text="Interval"
                android:textColor="#7e2c1e" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/til_x0"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/std_layout_margin"
                        android:layout_marginRight="@dimen/std_layout_margin">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/x0"
                            android:layout_width="110dp"
                            android:layout_height="wrap_content"
                            android:gravity="center_horizontal"
                            android:hint="@string/xo"
                            android:inputType="numberDecimal|numberSigned"
                            android:textAlignment="center" />

                    </com.google.android.material.textfield.TextInputLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/til_x1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/std_layout_margin"
                        android:layout_marginRight="@dimen/std_layout_margin">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/x1"
                            android:layout_width="110dp"
                            android:layout_height="wrap_content"
                            android:gravity="center_horizontal"
                            android:hint="@string/xn"
                            android:inputType="numberDecimal|numberSigned"
                            android:textAlignment="center" />
                    </com.google.android.material.textfield.TextInputLayout>
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/std_layout_margin"
                android:text="Conditions"
                android:textColor="#7e2c1e" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:baselineAligned="false"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/til_step_size"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/std_layout_margin"
                        android:layout_marginRight="@dimen/std_layout_margin">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/text_h"
                            android:layout_width="110dp"
                            android:layout_height="wrap_content"
                            android:gravity="center_horizontal"
                            android:hint="step size (h)"
                            android:inputType="numberDecimal"
                            android:textAlignment="center" />
                    </com.google.android.material.textfield.TextInputLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/til_initY"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/std_layout_margin"
                        android:layout_marginRight="@dimen/std_layout_margin">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/text_initial_y"
                            android:layout_width="110dp"
                            android:layout_height="wrap_content"
                            android:gravity="center_horizontal"
                            android:hint="y(0)"
                            android:inputType="numberDecimal|numberSigned"
                            android:textAlignment="center" />
                    </com.google.android.material.textfield.TextInputLayout>
                </LinearLayout>

            </LinearLayout>

            <TextView
                android:id="@+id/textview_answer"
                style="@style/AnswerStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/empty_answer"
                android:textAlignment="center"

                android:visibility="gone" />

            <Button
                android:id="@+id/button_calculate"
                style="@style/AppMaterialTheme.ButtonStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/solve" />

            <Button
                android:id="@+id/button_show_algo"
                style="@style/AppMaterialTheme.ButtonStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:text="@string/show_algorithm" />

            <Button
                android:id="@+id/button_back"
                style="@style/AppMaterialTheme.ButtonStyle.Exit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/back_to_ode_menu"
                android:textStyle="bold" />
        </LinearLayout>
    </ScrollView>


</LinearLayout>