<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/parentContainer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="5dp"
    android:background="@color/colorMainBackground"
    android:orientation="vertical"
    tools:context=".activities.MainActivity">

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <com.foreverrafs.numericals.custom_views.HeaderTextView
                android:id="@+id/text_header"
                style="@style/AppMaterialTheme.HeaderStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="All in one converter" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:text="@string/conversion_all_in_one"
                android:textAlignment="center"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="@dimen/desc_text_size" />

            <Space
                android:layout_width="wrap_content"
                android:layout_height="20dp" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/til_user_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/std_layout_margin"
                android:layout_marginRight="@dimen/std_layout_margin">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/text_user_input"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:hint="Enter a decimal number"
                    android:inputType="numberDecimal"
                    android:textAlignment="center"
                    android:textColor="@color/answerColor" />
            </com.google.android.material.textfield.TextInputLayout>

            <LinearLayout
                android:id="@+id/layout_answer_area"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:orientation="vertical"
                android:visibility="gone"
                tools:visibility="visible">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/std_layout_margin"
                    android:layout_marginRight="@dimen/std_layout_margin"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/answer_vertical_width"
                        android:text="Bin "
                        android:textColor="#263238"
                        android:textSize="20sp"
                        android:visibility="visible" />

                    <!--<com.ms.square.android.expandabletextview.ExpandableTextView xmlns:android="http://schemas.android.com/apk/res/android"-->
                    <!--xmlns:expandableTextView="http://schemas.android.com/apk/res-auto"-->
                    <!--android:id="@+id/answer_binary"-->
                    <!--android:layout_width="match_parent"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--expandableTextView:animDuration="200"-->
                    <!--expandableTextView:maxCollapsedLines="1">-->

                    <TextView
                        android:id="@+id/text_answer_binary"
                        style="@style/AnswerStyle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/answer_vertical_width"
                        android:gravity="end"
                        android:text="0.000000"
                        android:textSize="20sp"
                        android:visibility="visible" />

                    <!--<ImageButton-->
                    <!--android:id="@id/expand_collapse"-->
                    <!--android:layout_width="wrap_content"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:layout_gravity="right|bottom"-->
                    <!--android:background="@android:color/transparent"-->
                    <!--android:padding="16dp" />-->
                    <!--</com.ms.square.android.expandabletextview.ExpandableTextView>-->


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/std_layout_margin"
                    android:layout_marginRight="@dimen/std_layout_margin"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/answer_vertical_width"
                        android:text="Octal "
                        android:textColor="#263238"
                        android:textSize="20sp"
                        android:visibility="visible" />

                    <TextView
                        android:id="@+id/text_answer_octal"
                        style="@style/AnswerStyle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/answer_vertical_width"
                        android:gravity="end"
                        android:text="0.000000"
                        android:textSize="20sp"
                        android:visibility="visible" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/std_layout_margin"
                    android:layout_marginRight="@dimen/std_layout_margin"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/answer_vertical_width"
                        android:text="hexa "
                        android:textColor="#263238"
                        android:textSize="20sp"
                        android:visibility="visible" />

                    <TextView
                        android:id="@+id/text_answer_hexadecimal"
                        style="@style/AnswerStyle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/answer_vertical_width"
                        android:gravity="end"
                        android:text="0.000000"
                        android:textSize="20sp"
                        android:visibility="visible" />
                </LinearLayout>


            </LinearLayout>


            <Button
                android:id="@+id/button_calculate"
                style="@style/AppMaterialTheme.ButtonStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/calculate" />

            <Button
                android:id="@+id/button_back"
                style="@style/AppMaterialTheme.ButtonStyle.Exit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Back to Conversions Menu"
                android:textStyle="bold" />
        </LinearLayout>
    </ScrollView>


</RelativeLayout>