<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/parentContainer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="5dp"
    android:background="@color/colorMainBackground"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <com.foreverrafs.numericals.custom_views.HeaderTextView
                android:id="@+id/text_header"
                style="@style/AppMaterialTheme.HeaderStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Convert decimals to binary" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:text="@string/dec_to_bin_frac_desc"
                android:textAlignment="center"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="@dimen/desc_text_size" />

            <Space
                android:layout_width="wrap_content"
                android:layout_height="20dp" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/til_user_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/std_layout_margin"
                android:layout_marginRight="@dimen/std_layout_margin">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/text_user_input"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:hint="Enter a Number"
                    android:inputType="numberDecimal"
                    android:textAlignment="center"
                    android:textColor="@color/answerColor" />
            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:id="@+id/text_answer_binary"
                style="@style/AnswerStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/answer_vertical_width"
                android:layout_marginBottom="@dimen/answer_vertical_width"
                android:text="0.000000"
                android:textAlignment="center"
                android:visibility="visible" />

            <Button
                android:id="@+id/button_calculate"
                style="@style/AppMaterialTheme.ButtonStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:text="@string/calculate" />

            <Button
                android:id="@+id/button_show_algo"
                style="@style/AppMaterialTheme.ButtonStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:text="@string/show_algorithm" />

            <Button
                android:id="@+id/button_back"
                style="@style/AppMaterialTheme.ButtonStyle.Exit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Back to Conversions Menu"
                android:textStyle="bold" />
        </LinearLayout>
    </ScrollView>


</RelativeLayout>